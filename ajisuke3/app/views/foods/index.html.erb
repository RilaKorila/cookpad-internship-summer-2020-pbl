<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">食材</th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
            <tr>
              <td><%= link_to food.food_name, food_path(food) %></td>
            </tr>
          <% end %>
        </tbody>
     </table>
     </div>
  </div>
</div>

