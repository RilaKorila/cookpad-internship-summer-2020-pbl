<div class="container mt-5">

  <div class="row">
    <div class="col-10 mx-auto">
    <h3>食材から探す</h3>
    <%= form_tag foods_path, :method => 'get' do %> 
        <p>
           <%= text_field_tag :search, params[:search] %>
           <%= submit_tag "Search", :name => nil %>
         </p>
         <% end %>
    <div class="card"> 

    
       
    

      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">おすすめ食材</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
            <tr>
              <td><%= link_to food.food_name, taste_path(1)  %></td>
              <td>
                <% if current_user.already_favorited?(food) %>

                <%= link_to food_favorites_path(food), method: :delete  do %>
                  <i class="fas fa-heart"></i>
                <% end %>
                <% else %>
               
                <%= link_to food_favorites_path(food), method: :post  do %>
                    <i class="far fa-heart"></i>
                  <% end %>  
                <% end %>
                  <%= food.favorites.count %>
              </td>
            </tr>
          <% end %>
        </tbody>
     </table>
     </div>
  </div>
</div>

