<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @taste.title %></h5>
          <p class="card-text"><%= simple_format @taste.body %></p>
          <p class="card-text">
            <small class="text-muted">更新日：<%= @taste.updated_at.strftime("%Y-%m-%d") %></small>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>


